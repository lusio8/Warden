@using WardenCore.Models
@model LoginViewModel
@{
    /**/

    ViewBag.Title = "Log in";
    ViewBag.ReturnUrl = "Home/Dashboard";
}

@using (Html.BeginForm("Login", "Account", new { RetusrnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div id="home">
    <section class="contenitore txtcenter">

        <article class="formhome">



            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.TextBoxFor(m => m.Email, new { @id = "nome", @placeholder = "Nickname" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


            @Html.PasswordFor(m => m.Password, new { @id = "password", @placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


            <input type="submit" value="accedi">


        </article>

        <div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>


        <p>
            @Html.ActionLink("Non hai un account? Registrati!", "Register")
        </p>

    </section>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

